<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ForestalCasablancaApp.Pages.LeñaPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:ForestalCasablancaApp.Controls"
    xmlns:viewModel="clr-namespace:ForestalCasablancaApp.ViewModels"
    Title="{Binding Title}"
    x:DataType="viewModel:LeñaViewModel">

    <Grid RowDefinitions="150, *">

        <Image
            Grid.Row="0"
            Aspect="AspectFill"
            Source="lena_background.jpg" />

        <ScrollView Grid.Row="1">

            <Grid RowDefinitions="Auto, *, Auto">
                <controls:ClientInfoCard Grid.Row="0" />
                <Border Grid.Row="1" 
                        HeightRequest="{OnIdiom Phone=312, Tablet=450}"
                        Style="{StaticResource PageSectionCard}">
                    <VerticalStackLayout>
                        <Label Style="{StaticResource PageSubtitle}" Text="Mediciones" />
                        <Grid
                            Grid.Row="1"
                            Padding="10,0"
                            ColumnDefinitions="Auto, *, Auto, *"
                            RowDefinitions="Auto, Auto, Auto, Auto, Auto"
                            RowSpacing="8">

                            <Label
                                Grid.Row="0"
                                Text="Largo Camión: "
                                VerticalOptions="Center" />

                            <controls:NumericEntryCell Grid.Row="0" Grid.Column="1" />


                            <Label
                                Grid.Row="0"
                                Grid.Column="2"
                                Text="N° de Bancos: "
                                VerticalOptions="Center" />

                            <controls:NumericEntryCell Grid.Row="0" Grid.Column="3" />

                            <Label
                                Grid.Row="1"
                                Grid.Column="0"
                                HorizontalOptions="Center"
                                Text="Altura 1: "
                                VerticalOptions="Center" />

                            <controls:NumericEntryCell Grid.Row="1" Grid.Column="1" />

                            <Label
                                Grid.Row="1"
                                Grid.Column="2"
                                HorizontalOptions="Center"
                                Text="Altura 5: "
                                VerticalOptions="Center" />

                            <controls:NumericEntryCell Grid.Row="1" Grid.Column="3" />

                            <Label
                                Grid.Row="2"
                                Grid.Column="0"
                                HorizontalOptions="Center"
                                Text="Altura 2: "
                                VerticalOptions="Center" />

                            <controls:NumericEntryCell Grid.Row="2" Grid.Column="1" />

                            <Label
                                Grid.Row="2"
                                Grid.Column="2"
                                HorizontalOptions="Center"
                                Text="Altura 6: "
                                VerticalOptions="Center" />

                            <controls:NumericEntryCell Grid.Row="2" Grid.Column="3" />

                            <Label
                                Grid.Row="3"
                                Grid.Column="0"
                                HorizontalOptions="Center"
                                Text="Altura 3: "
                                VerticalOptions="Center" />

                            <controls:NumericEntryCell Grid.Row="3" Grid.Column="1" />

                            <Label
                                Grid.Row="3"
                                Grid.Column="2"
                                HorizontalOptions="Center"
                                Text="Altura 7: "
                                VerticalOptions="Center" />

                            <controls:NumericEntryCell Grid.Row="3" Grid.Column="3" />

                            <Label
                                Grid.Row="4"
                                Grid.Column="0"
                                HorizontalOptions="Center"
                                Text="Altura 4: "
                                VerticalOptions="Center" />

                            <controls:NumericEntryCell Grid.Row="4" Grid.Column="1" />

                            <Label
                                Grid.Row="4"
                                Grid.Column="2"
                                HorizontalOptions="Center"
                                Text="Altura 8: "
                                VerticalOptions="Center" />

                            <controls:NumericEntryCell Grid.Row="4" Grid.Column="3" />

                        </Grid>
                    </VerticalStackLayout>

                </Border>

                <Border Grid.Row="2" 
                        HeightRequest="{OnIdiom Phone=55, Tablet=150}"
                        Style="{StaticResource PageSectionCard}">

                    <HorizontalStackLayout>
                        <Label Text="Palomera?" Style="{StaticResource PageSubtitle}" />
                    </HorizontalStackLayout>
                </Border>

            </Grid>


        </ScrollView>




    </Grid>

