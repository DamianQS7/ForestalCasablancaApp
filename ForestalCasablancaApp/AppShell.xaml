            <FontImageSource
                FontFamily="FAS"
                Glyph="{x:Static fontAwesome:FontAwesomeIcons.Gears}"
                Color="{AppThemeBinding Light={StaticResource Black},
                                        Dark={StaticResource White}}" />
        </Tab.Icon>
        <ShellContent
            Title=""
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
    </Tab>


</Shell>
